{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/jamesaubs/jamesaubs.github.io/main/mystocks.csv",
        "format": {
            "type": "csv"
        }
    },
    "title": {
        "text": "Regressing the Value of Bitcoin Against Ethereum",
        "subtitle": "From 2016 to 2021. Source: Investing.com",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start",
        "color": "black"
    },
    "width": 350,
    "height": 300,
    "mark": {
        "type": "line",
        "color": "orangered",
        "strokeWidth": 2,
        "opacity": 1
    },
    "layer": [
        {
            "mark": {
                "type": "point",
                "filled": true
            },
            "encoding": {
                "x": {
                    "field": "BTC-USD",
                    "type": "quantitative"
                },
                "y": {
                    "field": "ETH-USD",
                    "type": "quantitative"
                }
            }
        },
        {
            "mark": {
                "type": "errorband",
                "color": "firebrick"
            },
            "transform": [
                {
                    "regression": "BTC-USD",
                    "on": "ETH-USD"
                }
            ],
            "encoding": {
                "x": {
                    "field": "BTC-USD",
                    "type": "quantitative"
                },
                "y": {
                    "field": "ETH-USD",
                    "type": "quantitative"
                }
            }
        },
        {
            "transform": [
                {
                    "regression": "BTC-USD",
                    "on": "ETH-USD",
                    "params": true
                },
                {
                    "calculate": "'RÂ²: '+format(datum.rSquared, '.2f')",
                    "as": "R2"
                }
            ],
            "mark": {
                "type": "text",
                "color": "firebrick",
                "x": "width",
                "align": "right",
                "y": -5
            },
            "encoding": {
                "text": {
                    "type": "nominal",
                    "field": "R2"
                }
            }
        }
    ]
}
