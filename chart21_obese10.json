{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Scatter plot of ten countries with highest 2021 obesity rates against their corresponding 2020 GDP.",
    "title": {
        "text": "Countries with High 2021 Obesity Rates vs Their 2020 GDP Values",
        "subtitle": "Source: World Bank and World Population Review",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start",
        "color": "black"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/jamesaubs/jamesaubs.github.io/main/obese10.csv"
    },
    "height": 240,
    "width": 240,
    "mark": {
        "type": "circle",
        "size": 150
    },
    "encoding": {
        "x": {
            "field": "GDP",
            "type": "quantitative",
            "title": "GDP (Billion US$)"
        },
        "y": {
            "field": "obesityRate",
            "type": "quantitative",
            "title": "Obesity Rate (%)"
        },
        "color": {
            "field": "country",
            "title": "Country",
            "scale": {
                "scheme": "viridis"
            }
        },
        "tooltip": [
            {
                "field": "country",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "GDP",
                "type": "quantitative",
                "title": "GDP",
                "format": ","
            },
            {
                "field": "obesityRate",
                "type": "quantitative",
                "title": "Obesity Rate"
            }
        ]
    }
}
