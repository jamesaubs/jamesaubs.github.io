{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Comparing Covid Cases at University and Home",
    "subtitle": "New daily Covid cases by UK city. Source: Gov.uk API",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://api.coronavirus.data.gov.uk/v2/data?areaType=ltla&metric=cumCasesBySpecimenDate&metric=newCasesBySpecimenDate&format=csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": {
        "field": "areaName",
        "oneOf": ["Milton Keynes", "Oxford", "Bristol, City of"]
      }
    }
  ],
  "height": 300,
  "width": 390,
  "mark": {"type": "bar", "point": false},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },
    "y": {
      "field": "newCasesBySpecimenDate",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false}
    },
    "color": {
      "field": "areaName",
      "type": "nominal",
      "scale": {"scheme": "set2"},
      "title": "Area",
      "legend": {"orient": "top-left", "fillColor": "#FcFdFd"}
    }
  }
}
