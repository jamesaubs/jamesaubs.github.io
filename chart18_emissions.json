{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "xx",
        "subtitle": "xx",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start",
        "color": "black"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/jamesaubs/jamesaubs.github.io/main/co2.csv"
    },
    "transform": [
        {
            "filter": {
                "field": "Entity",
                "oneOf": [
                    "India",
                    "United Kingdom",
                    "China",
                    "United States"
                ]
            }
        }
    ],
    "params": [
        {
            "name": "Year",
            "value": 1750,
            "bind": {
                "input": "range",
                "min": 1750,
                "max": 2020,
                "step": 1,
                "name": "Pick start year"
            }
        }
    ],
    "height": 300,
    "width": 375,
    "mark": {
        "type": "bar",
        "point": false
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "temporal",
            "title": null,
            "axis": {
                "grid": false
            }
        },
        "y": {
            "field": "Annual CO2 emissions",
            "type": "quantitative",
            "title": null,
            "axis": {
                "grid": false
            }
        },
        "color": {
            "field": "Entity",
            "type": "nominal",
            "scale": {
                "scheme": "set1"
            },
            "title": "Area",
            "legend": {
                "orient": "top-left",
                "fillColor": "#FcFdFd"
            }
        }
    }
}