{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Military Expenditure",
    "title": {
        "text": "United States Military Expenditure (% of GDP)",
        "subtitle": "From 1960-2019. Source: UNdata",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start",
        "color": "black"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/jamesaubs/jamesaubs.github.io/main/mexpend.csv"
    },
    "height": 300,
    "width": 380,
    "mark": {
        "type": "line",
        "point": false,
        "interpolate": "step",
        "color": "red"
    },
    "transform": [
        {
            "filter": {
                "field": "Country or Area",
                "oneOf": [
                    "United States"
                ]
            }
        }
    ],
    "encoding": {
        "x": {
            "field": "Year",
            "type": "temporal",
            "title": null,
            "axis": {
                "grid": false,
                "labelSeparation": 10
            }
        }
    },
    "layer": [
        {
            "encoding": {
                "y": {
                    "field": "Value",
                    "type": "quantitative",
                    "title": null
                }
            },
            "layer": [
                {
                    "mark": {
                        "type": "line",
                        "align": false,
                        "interpolate": "step",
                        "color": "red"
                    }
                },
                {
                    "transform": [
                        {
                            "filter": {
                                "selection": "hover"
                            }
                        }
                    ],
                    "mark": {
                        "type": "circle",
                        "size": 150,
                        "color": "red"
                    }
                }
            ]
        },
        {
            "mark": "rule",
            "encoding": {
                "opacity": {
                    "condition": {
                        "value": 0,
                        "selection": "hover"
                    },
                    "value": 0
                },
                "tooltip": [
                    {
                        "field": "Year",
                        "type": "temporal",
                        "format": "%Y",
                        "title": "Year"
                    },
                    {
                        "field": "Value",
                        "type": "quantitative",
                        "format": "0.2f",
                        "title": "%"
                    }
                ]
            },
            "selection": {
                "hover": {
                    "type": "single",
                    "fields": [
                        "Year"
                    ],
                    "nearest": true,
                    "on": "mouseover",
                    "empty": "none",
                    "clear": "mouseout"
                }
            }
        }
    ]
}
