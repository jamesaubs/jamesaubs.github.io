{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "SAS litter",
    "title": {
        "text": "Relating Population and Happiness Levels",
        "subtitle": "Source: World Population Review",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start",
        "color": "black"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/jamesaubs/jamesaubs.github.io/main/happydata.csv"
    },
    "params": [
        {
            "name": "highlight",
            "select": {
                "type": "point",
                "on": "mouseover"
            }
        }
    ],
    "mark": {
        "type": "bar",
        "color": "#8fb85bb2",
        "strokeWidth": 2,
        "opacity": 1
    },
    "height": 300,
    "width": 350,
    "encoding": {
        "y": {
            "field": "country",
            "type": "ordinal",
            "sort": "-x",
            "title": null
        },
        "x": {
            "field": "pop2021",
            "type": "quantitative",
            "title": "Population '000s"
        },
        "fillOpacity": {
            "condition": {
                "param": "highlight",
                "value": 1
            },
            "value": 0.6
        },
        "tooltip": [
            {
                "field": "rank",
                "type": "quantitative",
                "title": "Rank"
            },
            {
                "field": "happiness2020",
                "type": "quantitative",
                "title": "Happiness Value 2020"
            },
            {
                "field": "happiness2021",
                "type": "quantitative",
                "title": "Happiness Value 2021"
            }
        ]
    }
}
