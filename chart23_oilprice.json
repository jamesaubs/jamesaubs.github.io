{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Line chart that uses repeated layers to make multiple calls to json files",
    "title": {
        "text": "Mapping Global Prices of Cooking Oils",
        "subtitle": "Red = Olive Oil, Green = Soyabeans Oil, Blue = Palm Oil. Source: FRED",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start",
        "color": "black"
    },
    "height": 300,
    "width": 300,
    "encoding": {
        "x": {
            "field": "date",
            "type": "temporal",
            "title": null,
            "axis": {
                "grid": false,
                "labelSeparation": 20
            },
            "scale": {
                "domain": [
                    "1990-01-01",
                    "2022-01-01"
                ]
            }
        },
        "y": {
            "field": "value",
            "type": "quantitative",
            "title": "US Dollars per Metric Ton",
            "axis": {
                "grid": false
            }
        }
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jamesaubs/jamesaubs.github.io/main/data_FRED-POLVOILUSDM.json",
                "format": {
                    "type": "json",
                    "property": "observations"
                }
            },
            "mark": {
                "type": "line",
                "color": "red"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jamesaubs/jamesaubs.github.io/main/data_FRED-PPOILUSDM.json",
                "format": {
                    "type": "json",
                    "property": "observations"
                }
            },
            "mark": {
                "type": "line",
                "color": "blue"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jamesaubs/jamesaubs.github.io/main/data_FRED-PSOILUSDM.json",
                "format": {
                    "type": "json",
                    "property": "observations"
                }
            },
            "mark": {
                "type": "line",
                "color": "green"
            }
        }
    ]
}